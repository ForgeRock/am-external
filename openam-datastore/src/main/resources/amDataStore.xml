<!DOCTYPE ServicesConfiguration PUBLIC "=//iPlanet//Service Management Services (SMS) 1.0 DTD//EN"
        "jar://com/sun/identity/sm/sms.dtd">

<ServicesConfiguration>
    <Service name="amDataStoreService" version="1.0">
        <Schema serviceHierarchy="/DSAMEConfig/amDataStoreService"
                i18nFileName="DataStoreService"
                revisionNumber="1"
                i18nKey="serviceName"
                resourceName="DataStoreService">
            <Global>
                <SubSchema name="dataStoreContainer" resourceName="USE-PARENT">
                    <SubSchema name="config" inheritance="multiple" i18nKey="dataStoreInstance">
                        <!-- validators -->
                        <AttributeSchema name="PositiveNumberValidator" type="validator">
                            <DefaultValues>
                                <Value>org.forgerock.openam.audit.validation.PositiveIntegerValidator</Value>
                            </DefaultValues>
                        </AttributeSchema>
                        <AttributeSchema name="RequiredValueValidator" type="validator">
                            <DefaultValues>
                                <Value>com.sun.identity.sm.RequiredValueValidator</Value>
                            </DefaultValues>
                        </AttributeSchema>
                        <AttributeSchema name="SecretIdValidator" type="validator">
                            <DefaultValues>
                                <Value>org.forgerock.openam.sm.validation.SecretIdValidator</Value>
                            </DefaultValues>
                        </AttributeSchema>
                        <AttributeSchema name="dataStoreEnabled"
                                         order="100"
                                         type="single"
                                         syntax="boolean"
                                         i18nKey="dataStoreEnabled">
                            <BooleanValues>
                                <BooleanTrueValue i18nKey="i18nYes">true</BooleanTrueValue>
                                <BooleanFalseValue i18nKey="i18nNo">false</BooleanFalseValue>
                            </BooleanValues>
                        </AttributeSchema>
                        <AttributeSchema name="serverUrls"
                                         order="200"
                                         type="list"
                                         uitype="orderedlist"
                                         syntax="string"
                                         validator="RequiredValueValidator"
                                         i18nKey="serverUrls"/>
                        <AttributeSchema name="bindDN"
                                         order="400"
                                         type="single"
                                         i18nKey="bindDN">
                        </AttributeSchema>
                        <AttributeSchema name="bindPassword"
                                         order="500"
                                         type="single"
                                         syntax="password"
                                         i18nKey="bindPassword"/>
                        <AttributeSchema name="minimumConnectionPool"
                                         order="600"
                                         type="single"
                                         syntax="number"
                                         validator="RequiredValueValidator PositiveNumberValidator"
                                         i18nKey="minimumConnectionPool">
                            <DefaultValues>
                                <Value>1</Value>
                            </DefaultValues>
                        </AttributeSchema>
                        <AttributeSchema name="maximumConnectionPool"
                                         order="700"
                                         type="single"
                                         syntax="number"
                                         validator="RequiredValueValidator PositiveNumberValidator"
                                         i18nKey="maximumConnectionPool">
                            <DefaultValues>
                                <Value>10</Value>
                            </DefaultValues>
                        </AttributeSchema>
                        <AttributeSchema name="useSsl"
                                         order="800"
                                         type="single"
                                         syntax="boolean"
                                         i18nKey="useSsl">
                            <BooleanValues>
                                <BooleanTrueValue i18nKey="i18nYes">true</BooleanTrueValue>
                                <BooleanFalseValue i18nKey="i18nNo">false</BooleanFalseValue>
                            </BooleanValues>
                        </AttributeSchema>
                        <AttributeSchema name="mtlsEnabled"
                                         order="850"
                                         type="single"
                                         syntax="boolean"
                                         i18nKey="mtlsEnabled">
                            <BooleanValues>
                                <BooleanTrueValue i18nKey="i18nYes">true</BooleanTrueValue>
                                <BooleanFalseValue i18nKey="i18nNo">false</BooleanFalseValue>
                            </BooleanValues>
                        </AttributeSchema>
                        <AttributeSchema name="mtlsSecretLabel"
                                         order="860"
                                         type="single"
                                         i18nKey="mtlsSecretLabel"
                                         validator="SecretIdValidator">
                            <IsOptional/>
                        </AttributeSchema>
                        <AttributeSchema name="useStartTLS"
                                         order="900"
                                         type="single"
                                         syntax="boolean"
                                         i18nKey="startTls">
                            <BooleanValues>
                                <BooleanTrueValue i18nKey="i18nYes">true</BooleanTrueValue>
                                <BooleanFalseValue i18nKey="i18nNo">false</BooleanFalseValue>
                            </BooleanValues>
                        </AttributeSchema>
                        <AttributeSchema name="affinityEnabled"
                                         order="1000"
                                         type="single"
                                         syntax="boolean"
                                         i18nKey="affinityEnabled">
                            <BooleanValues>
                                <BooleanTrueValue i18nKey="i18nYes">true</BooleanTrueValue>
                                <BooleanFalseValue i18nKey="i18nNo">false</BooleanFalseValue>
                            </BooleanValues>
                        </AttributeSchema>
                    </SubSchema>
                </SubSchema>
            </Global>
            <Organization>
                <AttributeSchema name="policy-datastore-id"
                                 type="single_choice"
                                 uitype="unorderedlist"
                                 i18nKey="policy.datastore.id"
                                 order="100"
                                 resourceName="policyDataStoreId">
                    <ChoiceValues>
                        <ChoiceValuesClassName className="org.forgerock.openam.core.rest.sms.SmsDataStoreChoiceValues"/>
                    </ChoiceValues>
                    <DefaultValues>
                        <DefaultValuesClassName className="org.forgerock.openam.core.rest.sms.SmsDataStoreDefaultValues" />
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="application-datastore-id"
                                 type="single_choice"
                                 uitype="unorderedlist"
                                 i18nKey="application.datastore.id"
                                 order="200"
                                 resourceName="applicationDataStoreId">
                    <ChoiceValues>
                        <ChoiceValuesClassName className="org.forgerock.openam.core.rest.sms.SmsDataStoreChoiceValues"/>
                    </ChoiceValues>
                    <DefaultValues>
                        <DefaultValuesClassName className="org.forgerock.openam.core.rest.sms.SmsDataStoreDefaultValues" />
                    </DefaultValues>
                </AttributeSchema>
            </Organization>
        </Schema>

        <Configuration>
            <GlobalConfiguration>
                <SubConfiguration name="dataStoreContainer"/>
            </GlobalConfiguration>
        </Configuration>

    </Service>
</ServicesConfiguration>
