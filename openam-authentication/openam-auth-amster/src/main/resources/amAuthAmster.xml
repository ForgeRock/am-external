<!DOCTYPE ServicesConfiguration
        PUBLIC "=//forgerock//Service Management Services (SMS) 1.0 DTD//EN"
        "jar://com/sun/identity/sm/sms.dtd">

<ServicesConfiguration>
    <Service name="iPlanetAMAuthAmsterService" version="1.0">
        <Schema
                serviceHierarchy="/DSAMEConfig/authentication/iPlanetAMAuthAmsterService"
                i18nFileName="amAuthAmster"
                revisionNumber="1"
                i18nKey="iPlanetAMAuthAmsterServiceDescription"
                resourceName="amster">

            <Organization>
                <AttributeSchema name="RequiredValueValidator" type="validator" syntax="string">
                    <DefaultValues>
                        <Value>com.sun.identity.sm.RequiredValueValidator</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="forgerock-am-auth-amster-auth-level"
                                 type="single" syntax="number_range" rangeStart="0"
                                 rangeEnd="2147483647" i18nKey="a500" order="300" resourceName="authenticationLevel">
                    <DefaultValues>
                        <Value>0</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="forgerock-am-auth-amster-authorized-keys"
                                 type="single"
                                 syntax="string"
                                 validator="RequiredValueValidator"
                                 i18nKey="field-authorized-keys"
                                 order="100"
                                 resourceName="authorizedKeys">
                    <DefaultValues placeholder="&amp;{amster.secrets.keys.path|&amp;{am.server.config.dir}/security/keys/amster/authorized_keys}">
                        <Value>@BASE_DIR@/security/keys/amster/authorized_keys</Value>
                    </DefaultValues>
                </AttributeSchema>
                <AttributeSchema name="forgerock-am-auth-amster-enabled"
                                 type="single"
                                 syntax="boolean"
                                 validator="RequiredValueValidator"
                                 i18nKey="field-enabled"
                                 order="200"
                                 resourceName="enabled">
                    <BooleanValues>
                        <BooleanTrueValue i18nKey="i18nTrue">true</BooleanTrueValue>
                        <BooleanFalseValue i18nKey="i18nFalse">false</BooleanFalseValue>
                    </BooleanValues>
                    <DefaultValues>
                        <Value>true</Value>
                    </DefaultValues>
                </AttributeSchema>
                <SubSchema name="serverconfig" inheritance="multiple" resourceName="USE-PARENT">
                    <AttributeSchema name="RequiredValueValidator" type="validator" syntax="string">
                        <DefaultValues>
                            <Value>com.sun.identity.sm.RequiredValueValidator</Value>
                        </DefaultValues>
                    </AttributeSchema>
                    <AttributeSchema name="forgerock-am-auth-amster-auth-level"
                                     type="single" syntax="number_range" rangeStart="0"
                                     rangeEnd="2147483647" i18nKey="a500" order="300" resourceName="authenticationLevel">
                        <DefaultValues>
                            <Value>0</Value>
                        </DefaultValues>
                    </AttributeSchema>
                    <AttributeSchema name="forgerock-am-auth-amster-authorized-keys"
                                     type="single"
                                     syntax="string"
                                     validator="RequiredValueValidator"
                                     i18nKey="field-authorized-keys"
                                     order="100"
                                     resourceName="authorizedKeys">
                        <DefaultValues placeholder="&amp;{amster.secrets.keys.path|&amp;{am.server.config.dir}/security/keys/amster/authorized_keys}">
                            <Value>@BASE_DIR@/security/keys/amster/authorized_keys</Value>
                        </DefaultValues>
                    </AttributeSchema>
                    <AttributeSchema name="forgerock-am-auth-amster-enabled"
                                     type="single"
                                     syntax="boolean"
                                     validator="RequiredValueValidator"
                                     i18nKey="field-enabled"
                                     order="200"
                                     resourceName="enabled">
                        <BooleanValues>
                            <BooleanTrueValue i18nKey="i18nTrue">true</BooleanTrueValue>
                            <BooleanFalseValue i18nKey="i18nFalse">false</BooleanFalseValue>
                        </BooleanValues>
                        <DefaultValues>
                            <Value>true</Value>
                        </DefaultValues>
                    </AttributeSchema>
                </SubSchema>
            </Organization>
        </Schema>
        <Configuration>
            <OrganizationConfiguration name="/">
                <AttributeValuePair placeholder="&amp;{amster.secrets.keys.path|&amp;{am.server.config.dir}/security/keys/amster/authorized_keys}">
                    <Attribute name="forgerock-am-auth-amster-authorized-keys"/>
                    <Value>@BASE_DIR@/security/keys/amster/authorized_keys</Value>
                </AttributeValuePair>
            </OrganizationConfiguration>
        </Configuration>
    </Service>
</ServicesConfiguration>
